<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/listview_drawable">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/posterIV"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:contentDescription="@string/movie_s_poster"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_gravity="center"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:background="@drawable/listview_drawable" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:weightSum="2.3"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:weightSum="3">

                <TextView
                    android:text="@string/movie_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/titleTV"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:gravity="center_vertical|start"
                    android:lines="1"
                    android:ellipsize="marquee" />

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton2"
                    android:scaleType="fitEnd"
                    android:contentDescription="@string/watched_state"
                    android:background="@drawable/watched_drawable"
                    android:layout_gravity="end" />

            </FrameLayout>

            <TextView
                    android:text="@string/genre"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/genreTV"
                    android:layout_weight="0.5"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:gravity="top|start"
                android:ellipsize="marquee"
                android:lines="1" />

            <TextView
                    android:text="@string/year"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/yearTV"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:gravity="top|start"
                    android:layout_weight="0.5"
                android:layout_marginBottom="7dp" />
            <View
                android:layout_width="match_parent"
                android:src="@android:drawable/divider_horizontal_bright"
                android:background="#b30000"
                android:layout_height="5dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:id="@+id/view"
                android:layout_marginBottom="10dp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>

