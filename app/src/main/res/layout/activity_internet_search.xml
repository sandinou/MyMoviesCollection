<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_internet_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project1v2mymoviescollection.Activities.InternetSearchActivity"
    android:background="@drawable/fond2">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2.5"
        android:id="@+id/linear6">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/searchET"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:inputType="text"
            android:hint="@string/enter_movie_name"
            android:layout_weight="2"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColorHint="@android:color/black" />

        <ImageButton
            android:layout_width="0dp"
            app:srcCompat="@drawable/internet_search"
            android:id="@+id/searchBtn"
            android:layout_weight="0.5"
            android:background="@drawable/watched_drawable"
            android:contentDescription="@string/search_image"
            android:scaleType="fitCenter"
            android:layout_height="100dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="previous"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_weight="1" />

        <Button
            android:text="next"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_weight="1" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/moviesLV"
        android:dividerHeight="5dp" />

</LinearLayout>
